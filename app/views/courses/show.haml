- breadcrumb :course, @course

%h1= @course.name

%h3= User.human_attribute_name(:description)
%p
  = @course.description

%h3= User.human_attribute_name(:instructors)
%ul
  - @course.instructors.each do |instructor|
    %li= instructor.name

%h3= Assignment.model_name.human.pl
%table.table.table-striped
  %thead
    %tr
      %th= Assignment.human_attribute_name(:name)
      %th= Assignment.human_attribute_name(:due_date)
  %tbody
    = no_results_found_row(2) if @assignments.to_a.empty?
    - @assignments.each do |assignment|
      %tr
        %td= link_to assignment.name, [@course, assignment]
        %td= l assignment.due_date, format: :long

